<div class="container">
	<div class="col-12">
		<h1>My Page</h1>

		<div class="row">
			<div class="col-sm-3">
				<div><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg")%>
				</div>
		    </div>
			<div class="col-sm-4">
				<div><strong><%= @user.name %></strong></div>
		        <div><%= @user.profile %></div>
		        <!-- フォロー数　follows にするとエラーが発生する　直す0724 -->
		        <div><strong><%= "フォロー　：#{@user.followers.count}" %></strong></div>
		        <div><strong><%= "フォロワー：#{@user.followers.count}" %></strong></div>
		        <div>
		        	<% if current_user != @user %>
                		<% if @user.followed_by?(current_user) %>
                        	<div><%= link_to "Unfollow", user_relationships_path(@user.id), class: "btn btn-danger", method: :delete%></div>
             			<% else %>
                            <div><%= link_to "Follow", user_relationships_path(@user.id), class: "btn btn-info", method: :post %></div>
             			<% end %>
　　　　　　  		<% end %>
		        </div>
		    </div>
		    <div class="col-sm-5">
		    	<ul class="nav nav-tabs">
		    		<li class="active"><%= link_to '投稿', user_path(current_user.id) %></li>
		    		<li><a href="#">お気に入り</a></li>
		    		<li><a href="#">フォロー</a></li>
		    		<li><a href="#">フォロワー</a></li>
		    		<% if current_user == @user %>
		    		<li><%= link_to ' ',edit_user_path(@user), class: "glyphicon glyphicon-cog" %></li>
		    		<% end %>
		    	</ul>
		    </div>
		</div>

		<h2>投稿一覧</h2>
		<p>favorite comment 機能実装</p>
		<table>
			<% @posts.each do |post| %>
			<tr>
				<th class="post"></th>
				<th class="post">旅行先</th>
				<th class="post">２拠点</th>
				<th class="post">費用</th>
				<th class="post">説明</th>
			</tr>
			<tr>
				<td>
					<%= link_to ' check',post_path(post), class: "btn btn-default btn-sm glyphicon glyphicon-eye-open" %>
				</td>
				<td><%= post.travel_spot %></td>
				<td><%= post.point_a %>と<%= post.point_b %></td>
				<td><%= post.cost %></td>
				<td><%= post.explanation %></td>
			</tr>
			<% end %>
		</table>

	</div>
</div>